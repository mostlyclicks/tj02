<% content_for :body do %>
  <ul id="indicators">
    <% @indicators.each do |indicator| %>
      <li>
        <%= link_to indicator.name, refinery.indicators_indicator_path(indicator) %>
      </li>
    <% end %>
  </ul>
<% end %>

<%#= render '/refinery/content_page' %>

<!-- Nav tabs -->
<div class="container">
  <div class="row" style="margin-top:40px;">
    <div class="col-lg-12">
        <ul class="nav nav-tabs" role="tablist">
         <li class="active"><a href="#list-view" role="tab" data-toggle="tab"><span class="fa fa-list"></span> List View</a></li>
         <li><a href="#grid-view" role="tab" data-toggle="tab"><span class="fa fa-th"></span> Grid View</a></li>
        </ul>
    </div>
  </div>
</div>
<div class="indicator-index">
<div class="tab-content">
  <div class="tab-pane active" id="list-view">
        <div class="container">
      <div class="row">
        <% @indicators.each do |i| %>
          <div class="col-lg-6" style="margin-bottom:1em;">
            <%= link_to i.name, refinery.indicators_indicator_path(i) %>
          </div>
        <% end %>
      </div>
    </div>

  </div>
  <div class="tab-pane" id="grid-view">
    <div class="container">
      <div class="row">
        <% @indicators.each do |i| %>
        <div class="col-lg-4 indicators">
          <iframe src="<%= raw i.iframe_url %>" frameborder="0" height="250" style="background-color:#efefef;"></iframe>
          <small><%= link_to 'View large graph', refinery.indicators_indicator_path(i) %> | <%= link_to 'Download CSV', i.csv_url %></small>
        </div>
        <% end %>
      </div>
    </div>
  </div>

</div>
</div>

