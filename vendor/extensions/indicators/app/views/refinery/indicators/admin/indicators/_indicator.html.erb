<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(indicator) -%>">
  <span class='title'>
    <%= indicator.name %>

  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_go.png"), refinery.indicators_indicator_path(indicator),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_indicators_admin_indicator_path(indicator),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.indicators_admin_indicator_path(indicator),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => indicator.name),
        :method => :delete %>
  </span>
</li>
