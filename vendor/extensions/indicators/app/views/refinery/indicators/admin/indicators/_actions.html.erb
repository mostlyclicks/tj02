<ul>
  <% if ::Refinery::Indicators::Admin::IndicatorsController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.indicators_admin_indicators_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_indicators_admin_indicator_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Indicators::Admin::IndicatorsController.sortable? && ::Refinery::Indicators::Indicator.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Indicators"),
                 refinery.indicators_admin_indicators_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Indicators"),
                 refinery.indicators_admin_indicators_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
