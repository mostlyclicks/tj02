<% content_for :body_content_title do %>
  <%= @survey.name %>
<% end %>
<div id="main-content">
<div class="container">
  <div class="row">
    <div class="col-lg-8">
      <h1><%= raw @survey.name %></h1>
      <%= raw @survey.description %>
      <%= button_to 'Take the survey', @survey.survey_link, class: 'btn btn-primary' %>

      <p>This survey will close <%=raw @survey.survey_end.strftime("%B %d") %> at <%=raw @survey.survey_end.strftime("%I%p").sub!(/^0/, "") %>  </p>


    </div>

  </div>

</div>
</div>


<% content_for :body do %>
  <section>
    <h1>Name</h1>
    <p>
      <%=raw @survey.name %>
    </p>
  </section>
  <section>
    <h1>Description</h1>
    <p>
      <%=raw @survey.description %>
    </p>
  </section>
  <section>
    <h1>Survey Link</h1>
    <p>
      <%=raw @survey.survey_link %>
    </p>
  </section>
  <section>
    <h1>Survey End</h1>
    <p>
      <%#=raw @survey.survey_end %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="surveys">
      <% @surveys.each do |survey| %>
        <li>
          <%= link_to survey.name, refinery.surveys_survey_path(survey) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%#= render '/refinery/content_page' %>
