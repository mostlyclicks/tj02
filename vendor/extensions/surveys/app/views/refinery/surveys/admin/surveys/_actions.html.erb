<ul>
  <% if ::Refinery::Surveys::Admin::SurveysController.searchable? %>
    <li>
      <%= render '/refinery/admin/search', :url => refinery.surveys_admin_surveys_path %>
    </li>
  <% end %>
  <li>
    <%= link_to t('.create_new'), refinery.new_surveys_admin_survey_path,
                 :class => "add_icon" %>
  </li>
<% if !searching? && ::Refinery::Surveys::Admin::SurveysController.sortable? && ::Refinery::Surveys::Survey.many? %>
  <li>
    <%= link_to t('.reorder', :what => "Surveys"),
                 refinery.surveys_admin_surveys_path,
                 :id => "reorder_action",
                 :class => "reorder_icon" %>

    <%= link_to t('.reorder_done', :what => "Surveys"),
                 refinery.surveys_admin_surveys_path,
                 :id => "reorder_action_done",
                 :style => "display: none;",
                 :class => "reorder_icon" %>
  </li>
<% end %>
</ul>
