<li class='clearfix record <%= cycle("on", "on-hover") %>' id="<%= dom_id(survey) -%>">
  <span class='title'>
    <%= survey.name %>

  </span>
  <span class='actions'>
    
    <%= link_to refinery_icon_tag("application_go.png"), refinery.surveys_survey_path(survey),
        :title => t('.view_live_html'),
        :target => "_blank" %>
    
    <%= link_to refinery_icon_tag("application_edit.png"), refinery.edit_surveys_admin_survey_path(survey),
         :title => t('.edit') %>
    <%= link_to refinery_icon_tag("delete.png"), refinery.surveys_admin_survey_path(survey),
        :class => "cancel confirm-delete",
        :title => t('.delete'),
        :confirm => t('message', :scope => 'refinery.admin.delete', :title => survey.name),
        :method => :delete %>
  </span>
</li>
