<%= form_for [refinery, :graphs_admin, @graph] do |f| -%>
  <%= render '/refinery/admin/error_messages',
              :object => @graph,
              :include_object_name => true %>

  <div class='field'>
    <%= f.label :name -%>
    <%= f.text_field :name, :class => 'larger widest' -%>
  </div>

  <div class='field'>
    <%= render '/refinery/admin/wysiwyg',
                :f => f,
                :fields => [:excerpt, :description, :code],
                :object => "graphs/graph" -%>
  </div>

  <%= render '/refinery/admin/form_actions', :f => f,
             :continue_editing => false,
             :delete_title => t('delete', :scope => 'refinery.graphs.admin.graphs.graph'),
             :delete_confirmation => t('message', :scope => 'refinery.admin.delete', :title => @graph.name) -%>
<% end -%>

<% content_for :javascripts do -%>
  <script>
    $(document).ready(function(){
      page_options.init(false, '', '');
    });
  </script>
<% end -%>
